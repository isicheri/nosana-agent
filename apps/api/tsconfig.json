{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".", // This is good
    "target": "ES2020",
    "module": "CommonJS",              // ✅ CommonJS mode!
    "moduleResolution": "node",        // ✅ Proper resolution for CommonJS
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "@nosana-agent/db": ["../../packages/db/src"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "../../packages/db" }]
}
