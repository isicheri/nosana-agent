{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "@nosana-agent/db": ["../../packages/db"],
      "@nosana-agent/mastra-agent": ["../../packages/mastra-agent"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/mastra-agent" }
  ]
}
