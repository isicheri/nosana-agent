{
  "name": "nosana-agent",
  "private": true,
  "version": "0.1.0",
  "description": "AI-powered study assistant backend built with MCP + Mastra for Nosana Builders Challenge 3.",
  "license": "MIT",
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:mcp": "pnpm --filter mcp-server dev",
    "dev:agent": "pnpm --filter agent dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
