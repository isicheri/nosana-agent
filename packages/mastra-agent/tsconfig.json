

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,                   // ‚Üê this is REQUIRED
    "declarationMap": true,                // optional but useful
    "emitDeclarationOnly": false,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}